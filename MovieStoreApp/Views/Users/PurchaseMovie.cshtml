@model MovieStoreApp.Models.DTO.AddPurchase

@{
    ViewData["Title"] = "Purchase Movie";
}

<h1>PurchaseMovie</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Users" asp-action="PurchaseMovie" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <br />
                <label>Select Movies:</label>
                
                @foreach (var movie in Model.Movies)
                {
                   
                    <div class="form-check">
                            <input class="form-check-input mt-0" type="checkbox" name="SelectedMovieIds" value="@movie.Id" id="movie_@movie.Id" aria-label="Checkbox for following text input" />
                        <label class="form-check-label" for="movie_@movie.Id">@movie.Title</label>
                    </div>
                  
                }
                <span asp-validation-for="SelectedMovieIds" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Purchase" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
