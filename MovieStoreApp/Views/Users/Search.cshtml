@model IEnumerable<MovieStoreApp.Models.DTO.Movie>

@{
    ViewData["Title"] = "Search";
}
@{
    var counter = 1;
}
<style>
    table {
        width: 100%;
        table-layout: fixed;
        border-collapse: separate;
    }

    th, td {
        width: 140px;
        border: inherit;
        padding: 5px;
        text-align: left;
    }
</style>
<h1>Search result</h1>


<table class="table">
    <thead>
        <tr>
            <th>
               Counter
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @counter
            </td>
                <td>

                    <img src="~/Images/Movies/@(string.IsNullOrEmpty(item.Image)?"Empty.jpg":item.Image)" width="100" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
               
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
                <td style="word-wrap: break-word;">
                    @item.Description
                </td>
               
            <td>

                    <a asp-action="Details" asp-controller="Users" asp-route-id="@item.Id" class="btn btn-primary mx-1"><i class="bi bi-info-circle" mx-2"></i>Details</a>
               
            </td>
        </tr>
        counter++;
}
    </tbody>
</table>
